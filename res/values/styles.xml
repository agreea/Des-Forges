<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
	<style name="LightNoActionBar" parent="android:Theme.Holo.Light">
    	<item name="android:windowActionBar">false</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
	<style name="SplashScreenBkgd" parent="android:Theme.Holo.Light">
	    <item name="android:windowBackground">@drawable/radarsplashscreen</item>
	    <item name="android:windowActionBar">false</item>
    	<item name="android:windowNoTitle">true</item>   
	</style>
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
        
    
   <!-- Text styles -->
    <style name="TextShadow">
    	<item name="android:paddingRight">3dp</item>
    	<item name="android:paddingLeft">3dp</item>
    	<item name="android:textSize">12sp</item>
    	<item name="android:shadowColor">#000000</item>
    	<item name="android:shadowDx">5</item>
    	<item name="android:shadowDy">5</item>
    	<item name="android:shadowRadius">10</item>
  	</style>
  	<style name="buttonPressed">  
    	<item name="android:textColor">@color/focusedbuttontext</item>
    	<item name="android:textStyle">bold</item>
	</style>
    
</resources>